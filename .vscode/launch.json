    "version": "0.2.0",
    "configurations": [
        // run the client
        {
            "name": "Demo Client",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        // run the server
        {
            "type": "node-terminal",
            "name": "Typescript Server",
            "request": "launch",
            "command": "ts-node src/servers/ts-server/server.ts",
            "cwd": "${workspaceFolder}"
        },
    ]
}